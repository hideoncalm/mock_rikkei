<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageNew"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/item_new_demo"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:shapeAppearanceOverlay="@style/RoundedStyle" />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawablePadding="10dp"
        android:text="Thu 4, 2019/12/11"
        android:textColor="@color/purple_heart"
        android:textSize="15sp"
        app:drawableStartCompat="@drawable/ic_calendar"
        app:layout_constraintStart_toEndOf="@id/imageNew"
        app:layout_constraintTop_toTopOf="@id/imageNew" />

    <TextView
        android:id="@+id/textNumPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:drawableTint="@color/purple_heart"
        android:text="40 se tham gia"
        android:textColor="@color/purple_heart"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/textTime"
        app:layout_constraintTop_toBottomOf="@id/textTime" />

    <TextView
        android:id="@+id/textSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:maxLines="2"
        android:text="UK ports ‘preparing to host EU customs checks’"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/textTime"
        app:layout_constraintTop_toBottomOf="@id/textNumPerson" />
</androidx.constraintlayout.widget.ConstraintLayout>
