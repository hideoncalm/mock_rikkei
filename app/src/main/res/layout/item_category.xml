<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="20dp"
    android:background="@color/white">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageSlug"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/purple_heart"
        android:backgroundTint="@color/purple_heart"
        android:scaleType="centerInside"
        app:layout_constraintDimensionRatio="1.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:shapeAppearanceOverlay="@style/CategoryStyle"
        app:srcCompat="@drawable/ic_favorite" />

    <TextView
        android:id="@+id/textCategory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:text="Fashion And Beauty"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/imageSlug"
        app:layout_constraintEnd_toStartOf="@id/buttonForward"
        app:layout_constraintStart_toEndOf="@id/imageSlug"
        app:layout_constraintTop_toTopOf="@id/imageSlug" />

    <ImageButton
        android:id="@+id/buttonForward"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="?selectableItemBackground"
        android:contentDescription="@null"
        android:src="@drawable/ic_arrow_forward"
        app:layout_constraintBottom_toBottomOf="@id/imageSlug"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageSlug" />
</androidx.constraintlayout.widget.ConstraintLayout>
